RewriteEngine On

RewriteCond %{HTTPS} !=on
RewriteCond %{ENV:HTTPS} !=on
RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=301]

RewriteCond %{HTTP:HOST} !=scholten.io
RewriteRule .* https://scholten.io%{REQUEST_URI} [R=301]

RewriteRule ^$                        scholten.io/index.html  [L]
RewriteCond %{REQUEST_FILENAME}       !-f
RewriteCond %{REQUEST_FILENAME}       !-d
RewriteRule (.*)                      scholten.io/index.html$1  [QSA,L]

AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript text/javascript
